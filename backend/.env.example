# Base de Datos
# -------------
# Local (Docker):
DATABASE_URL="mysql://root:root@localhost:3306/creditdb"

# Cloud SQL (GCP):
# DATABASE_URL="mysql://usuario:password@/creditdb?host=/cloudsql/proyecto:region:instancia"

# RDS (AWS):
# DATABASE_URL="mysql://usuario:password@mi-rds.xxx.us-east-1.rds.amazonaws.com:3306/creditdb"

# Azure SQL:
# DATABASE_URL="mysql://usuario:password@mi-servidor.mysql.database.azure.com:3306/creditdb"

# Servidor
# --------
PORT=3000
NODE_ENV=development

# Notificaciones (Futuras integraciones)
# --------------------------------------
# PUBSUB_TOPIC=credit-notifications
# SENDGRID_API_KEY=SG.xxxxx
# AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/xxx/credits
